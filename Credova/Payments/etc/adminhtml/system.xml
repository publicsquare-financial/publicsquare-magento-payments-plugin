<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <tab id="credova" translate="label" sortOrder="999999" class="credova-tab">
            <label>Credova</label>
        </tab>
        <section id="payment">
            <group id="credova_payments" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[<div class="credova-financial-tagline"><span>Credova Credit/Debit Payments</span><br/>Accept popular credit/debit cards from brands such as VISA, Mastercard, Discover & American Express.</div>]]></label>
                <fieldset_css>complex credova-financial-section</fieldset_css>
                <frontend_model>Credova\Payments\Block\Adminhtml\System\Config\Fieldset\Payment</frontend_model>
                <field id="plugin_version" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Version</label>
                    <frontend_model>Credova\Payments\Block\Adminhtml\System\Config\Form\Field\Label</frontend_model>
                </field>
                <field id="active" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Enabled</label>  
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Checkout page payment method title</label>
                </field>
                <field id="credova_api_public_key" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Credova Public API key</label>
                    <comment><![CDATA[You can find your Public key by visiting the <a href="https://portal.credova.com/developers/api-keys" target="_blank">API keys page</a> in your Credova Portal.]]></comment>
                </field>
                <field id="credova_api_secret_key" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Credova Secret API key</label>
                    <comment><![CDATA[You can find your Secret/Restricted key by visiting the <a href="https://portal.credova.com/developers/api-keys" target="_blank">API keys page</a> in your Credova Portal. Restricted keys need "transaction:write" permissions.]]></comment>
                </field>
                <field id="security_type" translate="label" type="select" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Security type</label>
                    <source_model>Credova\Payments\Model\Adminhtml\Inputs\SecurityType</source_model>
                </field>
                <field id="pre_authorization_type" translate="label" type="select" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Pre-Authorization type</label>
                    <source_model>Credova\Payments\Model\Adminhtml\Inputs\PreAuthorizationType</source_model>
                </field>
                <field id="cvv_verification" translate="label" type="select" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>CVV verification</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="three_d_secure_authentication" translate="label" type="select" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>3D secure authentication</label>
                    <source_model>Credova\Payments\Model\Adminhtml\Inputs\ThreeDSecureAuthentication</source_model>
                </field>
                <field id="card_types" translate="label" type="multiselect" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Allowed card types</label>
                    <source_model>Credova\Payments\Model\Adminhtml\Inputs\CardTypes</source_model>
                </field>
                <field id="payment_action" translate="label" type="select" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Payment capture action</label>
                    <source_model>Credova\Payments\Model\Adminhtml\Inputs\CaptureAction</source_model>
                </field>
                <field id="avs_check" translate="label" type="select" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>AVS Check</label>
                    <comment><![CDATA[AVS check happens automatically if an address and phone number is included in the payments creation request to Credova.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <attribute type="disabled">1</attribute>
                </field>
            </group>
        </section>
    </system>
</config>
