<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="credova_payments" xsi:type="object">Credova\Payments\Model\CredovaPaymentConfigProvider</item>
            </argument>
        </arguments>
    </type>

    <type name="Credova\Payments\Controller\Payment\Capture">
        <arguments>
            <argument name="captureCommand" xsi:type="object">Credova\Payments\Gateway\Command\CaptureCommand</argument>
        </arguments>
    </type>

    <type name="Magento\Vault\Model\Ui\TokensConfigProvider">
        <arguments>
            <argument name="tokenUiComponentProviders" xsi:type="array">
                <item name="credova_payments" xsi:type="object">Credova\Payments\Model\TokenUiComponentProvider</item>
            </argument>
        </arguments>
    </type>
</config>
