<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Credova\Payments\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Credova\Payments\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">credova_payments_log</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Credova\Payments\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="Credova\Payments\Logger\Handler\Financial" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="fileName" xsi:type="string">/var/log/credova-debug.log</argument>
        </arguments>
    </virtualType>

    <virtualType name="Credova\Payments\Logger\Financial" type="Monolog\Logger">
        <arguments>
            <argument name="name" xsi:type="string">credova_payments_logger</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Credova\Payments\Logger\Handler\Financial</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Credova\Payments\Api\RequestAbstract">
        <arguments>
            <argument name="logger" xsi:type="object">Credova\Payments\Logger\Financial</argument>
        </arguments>
    </type>

    <preference for="Credova\Payments\Api\Data\CustomerInterface" type="Credova\Payments\Model\Data\Customer" />
    <!-- <preference for="Credova\Payments\Api\Data\FederalLicenseInterface" type="Credova\Payments\Model\Data\FederalLicense"/> -->

    <preference for="Credova\Payments\Api\PaymentsInterface" type="Credova\Payments\Model\Api\Payments" />
    <preference for="Credova\Payments\Api\OrdersInterface" type="Credova\Payments\Model\Api\Orders" />
    <!-- <preference for="Credova\Payments\Api\FederalLicenseRepositoryInterface" type="Credova\Payments\Model\Api\FederalLicenseRepository"/> -->
    <preference for="Credova\Payments\Api\ReturnsInterface" type="Credova\Payments\Model\Api\ReturnRequest" />

