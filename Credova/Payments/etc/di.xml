    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="grid_record_grid_list_data_source" xsi:type="string">Credova\Payments\Model\ResourceModel\Grid\Grid\Collection</item>
            </argument>
        </arguments>
    </type> -->

    <!-- <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="persist_credova_extension_attributes" type="Credova\Payments\Plugin\Sales\OrderRepository"/>
    </type> -->
    <virtualType name="CredovaPaymentsValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">CredovaPaymentsConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="CredovaPaymentsConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">CredovaPaymentsConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="CredovaPaymentsConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">credova_payments</argument>
        </arguments>
    </virtualType>

    <virtualType name="CredovaPaymentsValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="country" xsi:type="string">CredovaPaymentsCountryValidator</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="CredovaPaymentsCountryValidator" type="Magento\Payment\Gateway\Validator\CountryValidator">
        <arguments>
            <argument name="config" xsi:type="object">CredovaPaymentsConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="CredovaPaymentsCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">Credova\Payments\Gateway\Command\AuthorizeCommand</item>
                <item name="sale" xsi:type="string">Credova\Payments\Gateway\Command\AuthorizeCaptureCommand</item>
                <item name="capture" xsi:type="string">Credova\Payments\Gateway\Command\CaptureCommand</item>
                <item name="refund" xsi:type="string">Credova\Payments\Gateway\Command\RefundCommand</item>
                <!-- <item name="vault_authorize" xsi:type="string">CredovaPaymentsVaultAuthorizeCommand</item> -->
            </argument>
        </arguments>
    </virtualType>

    <type name="Credova\Payments\Model\PaymentMethod">
        <arguments>
            <argument name="code" xsi:type="string">credova_payments</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">CredovaPaymentsValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">CredovaPaymentsValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">CredovaPaymentsCommandPool</argument>
        </arguments>
    </type>
    <!-- Vault config -->
    <virtualType name="CredovaPaymentsCCVaultFacade" type="Magento\Vault\Model\Method\Vault">
        <arguments>
            <argument name="config" xsi:type="object">CredovaPaymentsVaultPaymentConfig</argument>
            <argument name="valueHandlerPool" xsi:type="object">CredovaPaymentsVaultPaymentValueHandlerPool</argument>
            <argument name="vaultProvider" xsi:type="object">Credova\Payments\Model\PaymentMethod</argument>
            <argument name="code" xsi:type="const">Credova\Payments\Model\Transparent::CC_VAULT_CODE</argument>
        </arguments>
    </virtualType>
    <virtualType name="CredovaPaymentsVaultPaymentConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Credova\Payments\Model\Transparent::CC_VAULT_CODE</argument>
        </arguments>
    </virtualType>
    <virtualType name="CredovaPaymentsVaultPaymentValueHandlerPool" type="VaultPaymentValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">CredovaPaymentsVaultPaymentValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="CredovaPaymentsVaultPaymentValueHandler" type="VaultPaymentDefaultValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">CredovaPaymentsVaultPaymentConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="CredovaPaymentsVaultAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">CredovaPaymentsVaultAuthorizeRequest</argument>
            <argument name="transferFactory" xsi:type="object">Magento\Braintree\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Magento\Braintree\Gateway\Http\Client\TransactionSale</argument>
            <argument name="handler" xsi:type="object">BraintreeVaultResponseHandler</argument>
            <argument name="validator" xsi:type="object">Magento\Braintree\Gateway\Validator\ResponseValidator</argument>
            <argument name="errorMessageMapper" xsi:type="object">Magento\Braintree\Gateway\ErrorMapper\VirtualErrorMessageMapper</argument>
        </arguments>
    </virtualType>
    <virtualType name="CredovaPaymentsVaultAuthorizeRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="vault" xsi:type="string">Credova\Payments\Model\VaultDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="CredovaPaymentsCommandManager" type="Magento\Payment\Gateway\Command\CommandManager">
        <arguments>
            <argument name="commandPool" xsi:type="object">CredovaPaymentsCommandPool</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Payment\Gateway\Command\CommandManagerPool">
        <arguments>
            <argument name="executors" xsi:type="array">
                <item name="credova_payments" xsi:type="string">CredovaPaymentsCommandManager</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="CredovaAuthorizationHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="vault_details" xsi:type="string">Credova\Payments\Model\VaultDetailsHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Vault\Model\Ui\TokensConfigProvider">
        <arguments>
            <argument name="tokenUiComponentProviders" xsi:type="array">
                <item name="credova_payments" xsi:type="object">Credova\Payments\Model\TokenUiComponentProvider</item>
            </argument>
        </arguments>
    </type>
    <!-- End Vault config -->
</config>