<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/credova_payments/payments" method="POST">
        <service class="Credova\Payments\Api\PaymentsInterface" method="createPayment"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/credova_payments/returns" method="POST">
        <service class="Credova\Payments\Api\RefundsInterface" method="refundOrder"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/credova_payments/orders" method="POST">
        <service class="Credova\Payments\Api\OrdersInterface" method="execute"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>