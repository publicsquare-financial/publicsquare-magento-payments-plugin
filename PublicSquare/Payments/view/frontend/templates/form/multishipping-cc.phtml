                        $('#' + code + '_card_id').val(card.id);
                    }
                    $form.off('submit.publicsquare').trigger('submit');
                } catch (err) {
                    console.warn('psq: Failed to submit order.', err);
                    const msg = (
                                  err && err.message
                              ) || 'Error saving card.';
                   messageList.addErrorMessage({message: $t(msg)});
                }
            });
        });
    });
</script>