<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="PublicSquare_Payments::styles.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="PublicSquare\Payments\Block\Frontend\Form"
                   name="publisquare_payments.multiship"
                   template="PublicSquare_Payments::form/multishipping-cc.phtml"
                   cacheable="false">
                <block class="PublicSquare\Payments\Block\CreditCardForm"
                       name="publicsquare_payments.cc.form">
                    <arguments>
                        <argument name="showCardholderInput" xsi:type="boolean">false</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>